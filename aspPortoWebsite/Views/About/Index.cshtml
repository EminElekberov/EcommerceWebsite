@model HomeVM
<div class="page-wrapper">
    <main class="main about" style="margin-top:80px;">
        <div class="page-header page-header-bg text-left"
             style="background: 50%/cover #D4E1EA url('../images/page-header-bg.jpg');">
            <div class="container">
                <h1>
                    <span>ABOUT US</span>
                    OUR COMPANY
                </h1>
                <a href="/Contact/Index" class="btn btn-dark">Contact</a>
            </div><!-- End .container -->
        </div><!-- End .page-header -->

        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="demo1.html"><i class="icon-home"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">About Us</li>
                </ol>
            </div><!-- End .container -->
        </nav>

        <div class="about-section">
            <div class="container">
                <h2 class="subtitle">OUR STORY</h2>
                @foreach (var item in Model.ourStories)
                {
                    <p>
                        @item.Description
                    </p>
                    <p class="lead">
                        @item.Phorizm
                    </p>
                }
            </div><!-- End .container -->
        </div><!-- End .about-section -->

        <div class="features-section bg-gray">
            <div class="container">
                <h2 class="subtitle">WHY CHOOSE US</h2>
                <div class="row">
                    @foreach (var item in Model.whyChooses)
                    {
                        <div class="col-lg-4">
                            <div class="feature-box bg-white">
                                @Html.Raw(item.IconLink)

                                <div class="feature-box-content p-0">
                                    <h3>@item.Title</h3>
                                    <p>
                                        @item.Description
                                    </p>
                                </div><!-- End .feature-box-content -->
                            </div><!-- End .feature-box -->
                        </div><!-- End .col-lg-4 -->
                    }
                    </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .features-section -->
    </main><!-- End .main -->
</div>