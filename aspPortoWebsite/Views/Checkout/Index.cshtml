            <div class="row">
                @*<form method="post" enctype="multipart/form-data">*@
                    <div class="col-lg-7">
                        <ul class="checkout-steps">
                            <li>
                                <h2 class="step-title">Billing details</h2>
                                <form method="post" enctype="multipart/form-data">
                                <div class="row g-4">
                                    <div class="col-xl-6">
                                        <label>FirstName</label>
                                        <input name="FirstName" type="text" class="form-control" asp-for="FirstName" required placeholder="Name">
                                    </div>
                                    <div class="col-xl-6">
                                        <label>Lastname</label>
                                        <input name="LastName" type="text" class="form-control" asp-for="LastName" required placeholder="Email">
                                    </div>

                                </div>
                                <div class="col">
                                    <label>Company Name</label>
                                    <input name="CompanyName" type="text" class="form-control" asp-for="CompanyName" />
