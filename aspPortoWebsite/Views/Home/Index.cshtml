@*@model IList<Category>*@

@model HomeVM
@*slide seklinde getmesi ucun asagidaki clasi elave edirik sadece*@
<div class="home-slider slide-animate owl-carousel owl-theme show-nav-hover nav-big">
    @foreach (var item in Model.Sliders)
    {
        <div class="home-slide home-slide1 banner d-flex align-items-center">
            <img class="slide-bg" src="~/images/demoes/demo3/slider/@item.Image"
                 style="background-color: #ecc;" alt="home banner">
            <div class="banner-layer appear-animate" data-animation-name="fadeInUpShorter">
                <h2>@Html.Raw(item.TrendWord)</h2>
                <h3 class="text-uppercase mb-0">@item.DisCount</h3>
                <h4 class="m-b-4">@item.ClothType</h4>

                <h5 class="text-uppercase">
                    Starting at<span class="coupon-sale-text"><sup>@item.Price<sup>$</sup></sup></span>
                </h5>
                <a href="demo3-shop.html" class="btn btn-dark btn-xl" role="button">Shop Now</a>
            </div><!-- End .banner-layer -->
        </div><!-- End .home-slide -->
    }
</div><!-- End .home-slider -->

<section class="container">
    <h2 class="section-title ls-n-15 text-center pt-2 m-b-4">Shop By Category</h2>

    <div class="owl-carousel owl-theme nav-image-center show-nav-hover nav-outer cats-slider appear-animate"
         data-animation-name="fadeInUpShorter" data-animation-delay="200" data-animation-duration="1000">

        @foreach (var item in Model.productCategories)
        {
            <div class="product-category">


                <a href="/Home/ShopCategory/@item.Id">
                    <figure>
                        <img src="~/images/products/@item.Image" style="height:150px;"
                             alt="category" />
                    </figure>
                    <div class="category-content">
                        <h3>@item.Name</h3>
                        @*<span><mark class="count">@item.</mark> products</span>*@
                    </div>
                </a>
            </div>
        }
        </div>
</section>

<section class="bg-gray banners-section text-center">
    <div class="container py-2">
        <div class="row">
            @foreach (var item in Model.banners)
            {
                <div class="col-sm-6 col-lg-3 appear-animate" data-animation-name="fadeInLeftShorter"
                     data-animation-delay="100" data-animation-duration="1000">

                    <div class="home-banner banner banner-sm-vw mb-2">
                        <img src="~/images/banners/@item.Image"
                             style="background-color: #ccc;" width="419" height="629" alt="Banner" />
                        <div class="banner-layer banner-layer-bottom text-left">
                            <h3 class="m-b-2">@item.Title</h3>
                            <h4 class="m-b-3">@item.Description</h4>
                            <a href="demo3-shop.html" class="btn  btn-dark" role="button">@item.ButtonText</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="container pb-3 mb-1">
    <h2 class="section-title ls-n-15 text-center pb-2 m-b-4">Popular Products</h2>

    <div class="row py-4">
        @foreach (var item in Model.Books)
        {

            <div class="col-6 col-sm-4 col-md-3 col-xl-2 appear-animate" data-animation-name="fadeIn"
                 data-animation-delay="300" data-animation-duration="1000">
                <div class="product-default inner-quickview inner-icon">
                    <figure>
                        <a href="/Categories/Details/@item.ID">
                            <img src="~/images/categories/@item.Image" style="height:250px;" alt="productr" />
                        </a>
                        <div class="label-group">
                            @if (item.Percent != null)
                            {
                                <div class="product-label label-hot">HOT</div>
                                <div class="product-label label-sale">-@item.Percent%</div>
                            }
                        </div>
                        <div class="btn-icon-group">
                            <a asp-controller="cart" asp-action="buy" asp-route-id="@item.ID" class="btn-icon">
                                <i class="icon-shopping-cart"></i>
                            </a>
                        </div>
                        <a href="ajax/product-quick-view.html" class="btn-quickview" title="Quick View">
                            Quick
                            View
                        </a>
                    </figure>
                    <div class="product-details">
                        <div class="category-wrap">
                            <div class="category-list">
                                <a href="demo3-shop.html" class="product-category">@item.productCategory.Name</a>
                            </div>
                        </div>
                        <h3 class="product-title">
                            <a href="demo3-product.html">@item.Name</a>
                        </h3>
                        <div class="ratings-container">
                            <div class="product-ratings">
                                <span class="ratings" style="width:100%"></span><!-- End .ratings -->
                                <span class="tooltiptext tooltip-top"></span>
                            </div><!-- End .product-ratings -->
                        </div><!-- End .product-container -->
                        <div class="price-box">
                            <span class="old-price">$@item.PastPrice</span>
                            <span class="product-price">$@item.PresentPrice</span>
                        </div><!-- End .price-box -->
                    </div><!-- End .product-details -->
                </div>
            </div>
        }
    </div>

    <hr class="mt-3 mb-6">

    <div class="row feature-boxes-container pt-2">
        @foreach (var item in Model.services)
        {

            <div class="col-sm-6 col-lg-3 appear-animate" data-animation-name="fadeInRightShorter"
                 data-animation-delay="300" data-animation-duration="1000">
                <div class="feature-box feature-box-simple text-center">
                    @Html.Raw(item.Iconlink)

                    <div class="feature-box-content p-0">
                        <h3 class="text-uppercase">@item.Title</h3>
                        <h5>@item.Header</h5>

                        <p>
                            @item.Description
                        </p>
                    </div><!-- End .feature-box-content -->
                </div><!-- End .feature-box -->
            </div><!-- End .col-lg-3 -->
        }
    </div><!-- End .row .feature-boxes-container-->
</section>
