@model MyBlogCollection

@section stylesCategory{ @*bunu ona gore yazdiqki burda yazilan css shared papkasinda loayout.cshtml icerisinde render ede bilek*@
<style>
    label {
        color: red;
    }
</style>
}
<form method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" style="color:red"></div>*@
    <div class="mb-3">
        <label>Image</label>
        <input type="file" class="form-control" asp-for="Photo">
        <span asp-validation-for="Photo" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Date</label>
        <input type="text" class="form-control" asp-for="Date">
        <span asp-validation-for="Date" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Title</label>
        <textarea asp-for="Title" class="form-control"></textarea>
        @*<input type="text"asp-for="TrendWord">*@
        <span asp-validation-for="Title" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        @*<input type="text" class="form-control" asp-for="Description">*@
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>





@section scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#Description')).catch(error => {
        console.error(error);
    });
    </script>
}