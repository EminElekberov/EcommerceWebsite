
@model IList<HomeFooter>

@if (TempData["Success"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["Success"]
    </div>
}
<div style="overflow-x:scroll">

    <div style="margin-bottom:50px">
        <a href="/Admin/HomeFooter/Create" class="btn btn-outline-warning" style="width:1500px">Add new slider</a>
    </div>

    <table class="table table-bordered" style="width:1500px;">
        <thead class="bg-register-image">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">WorkHours</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@Html.Raw(item.Address)</td>
                    <td>@Html.Raw(item.Email)</td>
                    <td>@item.Phone</td>
                    <td>@item.WorkHours</td>
                    <td>
                        <a href="/Admin/HomeFooter/Edit/@item.Id" style="color:red"><i class="fas fa-edit"></i></a>
                        <a href="/Admin/HomeFooter/Delete/@item.Id" onclick="return confirm('Silmek isdediyinizden eminsinizmi?')" style="color:red"><i class="fas fa-trash-alt"></i></a>
                        <br />
                        <a href="/Admin/HomeFooter/Details/@item.Id" style="color:red">Etrafli</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
