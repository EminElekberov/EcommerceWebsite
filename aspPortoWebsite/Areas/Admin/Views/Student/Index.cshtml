@model IList<StudentAdress>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>
    <a href="/Admin/Student/AddStudent" style="width:100%" class="btn btn-success">Add new student</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Group</th>
            <th>Fullname</th>
            <th>City</th>
            <th>Adress</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Student.Group.Fullname</th>
                <th scope="row">@item.Student.Fullname</th>
                <td>@item.City</td>
                <td>@item.Address</td>
                <td>
                    <a href="/Admin/Student/Edit/@item.Student.Id" style="color:red"><i class="fas fa-edit"></i></a>
                    <a href="/Admin/Student/Delete/@item.Student.Id" onclick="return confirm('Silmek istediyinizden eminsiz?')" style="color:red">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a href="/Admin/Student/Details/@item.StudentId" style="color:red">Etrafli</a>
                </td>
            </tr>

        }
    </tbody>
</table>
