@model Category
@{
    ViewData["Title"] = "Edit";
}
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Add Picture</label>
        <input asp-for="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label>Current Photo</label>
        <img height="150" width="200" src="~/images/categories/@Model.Image" />
        <input type="hidden" name="Image" value="@Model.Image" />
    </div>
    <div class="mb-3">
        <label>Name</label>
        <textarea class="form-control" asp-for="Name"></textarea>
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>PresentPrice</label>
        <input type="text" class="form-control" asp-for="PresentPrice">
        <span asp-validation-for="PresentPrice" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>PastPrice</label>
        <input type="text" class="form-control" asp-for="PastPrice">
        <span asp-validation-for="PastPrice" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Sku</label>
        <input type="text" class="form-control" asp-for="Sku">
        <span asp-validation-for="Sku" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <input type="text" class="form-control" asp-for="Description">
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>SizeGuid</label>
        <input type="text" class="form-control" asp-for="SizeGuid">
        <span asp-validation-for="SizeGuid" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>AdditionalInformation</label>
        <input type="text" class="form-control" asp-for="AdditionalInformation">
        <span asp-validation-for="AdditionalInformation" style="color:red"></span>
    </div>
    <input type="submit" class="btn btn-danger btn-block" value="Update" />
</form>